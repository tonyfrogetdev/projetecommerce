{% extends "base.html.twig" %}

{% block title %}
Mes commandes


{% endblock %}

{% block body %}


<h1>Mes commandes</h1>

<table class="table">

<thead>
    <tr>
        <th>Numéro</th>
        <th>Nom complet</th>
        <th>Adresse</th>
        <th>Date de commande</th>
        <th>Produits</th>
        <th>Total de la commande</th>
    </tr>
</thead>
<tbody>

{% for p in purchases %}
    <tr>
        <td>{{ p.id }}</td>
        <td> {{ p.fullName }}</td>
        <td>{{ p.adress }} <br> {{ p.postalCode }}, {{ p.city }}</td>
        <td> {{ p.purchaseAt | date('d/m/Y H:i') }}</td>
        <td> <ul>
        {% for item in p.purchaseItems %}
        <li>{{item.product.name}} ({{item.total /100 }} €)</li>           
        {% endfor %}
        
        </ul></td>
        <td>{{ p.total / 100 }} €</td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endblock %}